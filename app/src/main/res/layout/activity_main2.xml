<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zaenalabidinal.justjava.Main2Activity">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/tambah"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:text="+" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hitung"
        android:layout_alignStart="@+id/harga"
        android:layout_marginTop="14dp"
        android:id="@+id/total"
        android:text="Total Harga :" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_kalkulasi"
        android:layout_alignBaseline="@+id/tambah"
        android:layout_alignBottom="@+id/tambah"
        android:layout_alignEnd="@+id/harga"
        android:layout_marginEnd="20dp" />

    <TextView
        android:text="Harga Kopi : Rp 5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/harga"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/tambah"
        android:layout_alignParentStart="true" />

    <Button
        android:text="hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/hitung"
        android:layout_below="@+id/harga"
        android:layout_alignParentStart="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kurang"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/harga"
        android:layout_toEndOf="@+id/harga" />

    <CheckBox
        android:text="With topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/checkBox"
        android:layout_below="@+id/total"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hitung"
        android:layout_alignStart="@+id/kurang"
        android:layout_marginStart="24dp"
        android:onClick="testerOnClick"
        android:id="@+id/button" />
</RelativeLayout>
